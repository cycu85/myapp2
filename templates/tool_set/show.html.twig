{% extends 'base.html.twig' %}

{% block title %}{{ tool_set.name }} - Zestaw narzędzi - {{ app_name() }}{% endblock %}
{% block page_title %}Szczegóły zestawu narzędzi{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_index') }}">Narzędzia</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_set_index') }}">Zestawy narzędzi</a></li>
    <li class="breadcrumb-item active">{{ tool_set.name }}</li>
{% endblock %}

{% block content %}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">
                        <i class="ri-stack-line me-2"></i>{{ tool_set.name }}
                    </h5>
                    <div class="flex-shrink-0">
                        <div class="hstack gap-2">
                            {% if can_edit %}
                            <a href="{{ path('app_tool_set_edit', {id: tool_set.id}) }}" class="btn btn-primary btn-sm">
                                <i class="ri-edit-line me-1"></i>Edytuj
                            </a>
                            {% endif %}
                            <a href="{{ path('app_tool_set_index') }}" class="btn btn-secondary btn-sm">
                                <i class="ri-arrow-left-line me-1"></i>Powrót
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Nazwa:</dt>
                            <dd class="col-sm-8">{{ tool_set.name }}</dd>
                            
                            <dt class="col-sm-4">Kod:</dt>
                            <dd class="col-sm-8">
                                {% if tool_set.code %}
                                    <code>{{ tool_set.code }}</code>
                                {% else %}
                                    <span class="text-muted">Brak kodu</span>
                                {% endif %}
                            </dd>
                            
                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                {% set status_class = tool_set.status == 'active' ? 'success' : (tool_set.status == 'maintenance' ? 'warning' : 'secondary') %}
                                <span class="badge bg-{{ status_class }}-subtle text-{{ status_class }}">
                                    {{ tool_set.statusLabel }}
                                </span>
                            </dd>
                            
                            <dt class="col-sm-4">Lokalizacja:</dt>
                            <dd class="col-sm-8">{{ tool_set.location ?: 'Nie określono' }}</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Utworzono:</dt>
                            <dd class="col-sm-8">
                                {{ tool_set.createdAt|date('d.m.Y H:i') }}
                                {% if tool_set.createdBy %}
                                    <br><small class="text-muted">przez {{ tool_set.createdBy.fullName }}</small>
                                {% endif %}
                            </dd>
                            
                            <dt class="col-sm-4">Ostatnia zmiana:</dt>
                            <dd class="col-sm-8">
                                {% if tool_set.updatedAt %}
                                    {{ tool_set.updatedAt|date('d.m.Y H:i') }}
                                    {% if tool_set.updatedBy %}
                                        <br><small class="text-muted">przez {{ tool_set.updatedBy.fullName }}</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </dd>
                            
                            <dt class="col-sm-4">Kompletność:</dt>
                            <dd class="col-sm-8">
                                {% if tool_set.isComplete %}
                                    <span class="badge bg-success-subtle text-success">
                                        <i class="ri-check-line me-1"></i>Kompletny
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning-subtle text-warning">
                                        <i class="ri-error-warning-line me-1"></i>Niekompletny
                                    </span>
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
                
                {% if tool_set.description %}
                <div class="row">
                    <div class="col-12">
                        <h6>Opis</h6>
                        <p class="text-muted">{{ tool_set.description|nl2br }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Tool Set Items -->
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h6 class="card-title mb-0 flex-grow-1">
                        Narzędzia w zestawie ({{ tool_set.items|length }})
                    </h6>
                    {% if can_edit %}
                    <div class="flex-shrink-0">
                        <button type="button" class="btn btn-success btn-sm" onclick="showAddItemModal()">
                            <i class="ri-add-line me-1"></i>Dodaj narzędzie
                        </button>
                    </div>
                    {% endif %}
                </div>
            </div>
            
            <div class="card-body">
                {% if tool_set.items|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Narzędzie</th>
                                <th>Ilość wymagana</th>
                                <th>Stan</th>
                                <th>Uwagi</th>
                                {% if can_edit %}
                                <th width="100">Akcje</th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in tool_set.items %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 avatar-xs me-2">
                                            <div class="avatar-title rounded-circle bg-light text-body">
                                                <i class="ri-hammer-line"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            {% if item.tool %}
                                                <h6 class="fs-14 mb-1">
                                                    <a href="{{ path('app_tool_show', {id: item.tool.id}) }}" class="text-body">
                                                        {{ item.tool.name }}
                                                    </a>
                                                </h6>
                                                {% if item.tool.manufacturer or item.tool.model %}
                                                <p class="text-muted mb-0 fs-12">
                                                    {{ item.tool.manufacturer }}
                                                    {% if item.tool.model %}{{ item.tool.model }}{% endif %}
                                                </p>
                                                {% endif %}
                                            {% else %}
                                                <span class="text-danger">Narzędzie usunięte</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-medium">{{ item.requiredQuantity }}</span>
                                    {% if item.tool %}
                                        <small class="text-muted">{{ item.tool.unit }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.isSufficient %}
                                        <span class="badge bg-success-subtle text-success">
                                            <i class="ri-check-line"></i> Kompletne
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning-subtle text-warning">
                                            <i class="ri-error-warning-line"></i> Brakuje
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.notes %}
                                        <span class="text-muted small">{{ item.notes|length > 50 ? item.notes|slice(0, 50) ~ '...' : item.notes }}</span>
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                {% if can_edit %}
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-soft-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="ri-more-fill"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" href="{{ path('app_tool_set_edit_item', {setId: tool_set.id, itemId: item.id}) }}">
                                                    <i class="ri-edit-line me-2"></i>Edytuj
                                                </a>
                                            </li>
                                            <li class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" href="#" onclick="removeItem({{ item.id }}, '{{ item.tool ? item.tool.name : 'nieznane' }}')">
                                                    <i class="ri-delete-bin-line me-2"></i>Usuń
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                                {% endif %}
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-4">
                    <div class="avatar-md mx-auto mb-4">
                        <div class="avatar-title bg-light rounded-circle display-6 text-muted">
                            <i class="ri-inbox-line"></i>
                        </div>
                    </div>
                    <h5>Brak narzędzi</h5>
                    <p class="text-muted">Ten zestaw nie zawiera jeszcze żadnych narzędzi.</p>
                    {% if can_edit %}
                    <button type="button" class="btn btn-success" onclick="showAddItemModal()">
                        <i class="ri-add-line me-1"></i>Dodaj pierwsze narzędzie
                    </button>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Actions Card -->
        {% if can_assign %}
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-user-settings-line me-1"></i>Operacje na zestawie
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">Funkcja w przygotowaniu</h6>
                    <p class="mb-0 small">
                        System wydawania i odbioru zestawów narzędzi będzie dostępny w kolejnej wersji.
                    </p>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Clone & Actions -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-settings-3-line me-1"></i>Dodatkowe akcje
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    {% if can_edit %}
                    <form method="post" action="{{ path('app_tool_set_clone', {id: tool_set.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('clone' ~ tool_set.id) }}">
                        <button type="submit" class="btn btn-info w-100" onclick="return confirm('Czy na pewno chcesz skopiować zestaw?')">
                            <i class="ri-file-copy-line me-1"></i>Kopiuj zestaw
                        </button>
                    </form>
                    {% endif %}
                    
                    {% if can_delete %}
                    <button type="button" class="btn btn-danger w-100" onclick="deleteToolSet()">
                        <i class="ri-delete-bin-line me-1"></i>Usuń zestaw
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- History/Log Card -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-history-line me-1"></i>Historia
                </h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Zestaw utworzony</h6>
                            <p class="text-muted mb-0 fs-12">
                                {{ tool_set.createdAt|date('d.m.Y H:i') }}
                                {% if tool_set.createdBy %}
                                    przez {{ tool_set.createdBy.fullName }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    
                    {% if tool_set.updatedAt and tool_set.updatedAt != tool_set.createdAt %}
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Ostatnia modyfikacja</h6>
                            <p class="text-muted mb-0 fs-12">
                                {{ tool_set.updatedAt|date('d.m.Y H:i') }}
                                {% if tool_set.updatedBy %}
                                    przez {{ tool_set.updatedBy.fullName }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Czy jesteś pewien?</h4>
                        <p class="text-muted mx-4 mb-0">Czy na pewno chcesz usunąć zestaw "{{ tool_set.name }}"?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Anuluj</button>
                    <form method="post" action="{{ path('app_tool_set_delete', {id: tool_set.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tool_set.id) }}">
                        <button type="submit" class="btn w-sm btn-danger">Tak, usuń!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addItemModalLabel">
                    <i class="ri-add-line me-2"></i>Dodaj narzędzie do zestawu
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addItemForm" method="post" action="{{ path('app_tool_set_add_item', {id: tool_set.id}) }}">
                <div class="modal-body">
                    <div id="addItemFormContent">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Ładowanie...</span>
                            </div>
                            <p class="mt-2 text-muted">Ładowanie formularza...</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="ri-close-line me-1"></i>Anuluj
                    </button>
                    <button type="submit" class="btn btn-success" id="addItemSubmit" disabled>
                        <i class="ri-save-line me-1"></i>Dodaj narzędzie
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}

{% block javascript %}
<script>
let addItemModal;
let addItemFormLoaded = false;

document.addEventListener('DOMContentLoaded', function() {
    addItemModal = new bootstrap.Modal(document.getElementById('addItemModal'));
});

function showAddItemModal() {
    addItemModal.show();
    
    // Load form content only once
    if (!addItemFormLoaded) {
        loadAddItemForm();
    }
}

function loadAddItemForm() {
    fetch('{{ path("app_tool_set_add_item", {id: tool_set.id}) }}', {
        method: 'GET',
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.text())
    .then(html => {
        // Extract form content from response
        const tempDiv = document.createElement('div');
        tempDiv.innerHTML = html;
        
        // Find form fields in the response
        const formFields = tempDiv.querySelector('.card-body');
        if (formFields) {
            document.getElementById('addItemFormContent').innerHTML = formFields.innerHTML;
            
            // Enable submit button
            document.getElementById('addItemSubmit').disabled = false;
            addItemFormLoaded = true;
        } else {
            document.getElementById('addItemFormContent').innerHTML = `
                <div class="alert alert-danger">
                    <i class="ri-error-warning-line me-2"></i>
                    Błąd podczas ładowania formularza. Spróbuj ponownie.
                </div>
            `;
        }
    })
    .catch(error => {
        console.error('Error loading form:', error);
        document.getElementById('addItemFormContent').innerHTML = `
            <div class="alert alert-danger">
                <i class="ri-error-warning-line me-2"></i>
                Błąd podczas ładowania formularza. Sprawdź połączenie internetowe.
            </div>
        `;
    });
}

// Handle form submission
document.getElementById('addItemForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const submitBtn = document.getElementById('addItemSubmit');
    const originalText = submitBtn.innerHTML;
    
    // Show loading state
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Dodawanie...';
    
    fetch(this.action, {
        method: 'POST',
        body: formData,
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => {
        if (response.ok) {
            // Success - reload page to show new item
            window.location.reload();
        } else {
            return response.text().then(html => {
                // Show validation errors
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = html;
                const formFields = tempDiv.querySelector('.card-body');
                if (formFields) {
                    document.getElementById('addItemFormContent').innerHTML = formFields.innerHTML;
                }
                throw new Error('Validation failed');
            });
        }
    })
    .catch(error => {
        console.error('Error submitting form:', error);
        // Reset button state
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
    });
});

function deleteToolSet() {
    new bootstrap.Modal(document.getElementById('deleteRecordModal')).show();
}

function removeItem(itemId, toolName) {
    if (confirm(`Czy na pewno chcesz usunąć "${toolName}" z zestawu?`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '{{ path("app_tool_set_remove_item", {setId: tool_set.id, itemId: "ITEM_ID"}) }}'.replace('ITEM_ID', itemId);
        
        const csrfInput = document.createElement('input');
        csrfInput.type = 'hidden';
        csrfInput.name = '_token';
        csrfInput.value = '{{ csrf_token("remove_item" ~ "ITEM_ID") }}'.replace('ITEM_ID', itemId);
        form.appendChild(csrfInput);

        document.body.appendChild(form);
        form.submit();
    }
}
</script>
{% endblock %}