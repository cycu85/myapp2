{% extends 'base.html.twig' %}

{% block title %}Edycja - {{ tool_set.name }} - {{ app_name() }}{% endblock %}
{% block page_title %}Edycja zestawu narzędzi{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_index') }}">Narzędzia</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_set_index') }}">Zestawy narzędzi</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_set_show', {id: tool_set.id}) }}">{{ tool_set.name }}</a></li>
    <li class="breadcrumb-item active">Edycja</li>
{% endblock %}

{% block content %}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">
                        <i class="ri-edit-line me-2"></i>Edycja zestawu: {{ tool_set.name }}
                    </h5>
                    <div class="flex-shrink-0">
                        <a href="{{ path('app_tool_set_show', {id: tool_set.id}) }}" class="btn btn-secondary">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Powrót do szczegółów
                        </a>
                    </div>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <!-- Basic Information -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Informacje podstawowe</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label required'}}) }}
                                            {{ form_widget(form.name) }}
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(form.code, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.code) }}
                                            {{ form_errors(form.code) }}
                                            {{ form_help(form.code) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label required'}}) }}
                                            {{ form_widget(form.status) }}
                                            {{ form_errors(form.status) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.location, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.location) }}
                                            {{ form_errors(form.location) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.description) }}
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Current Status -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-information-line me-1"></i>Status zestawu
                                </h6>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-5">Utworzono:</dt>
                                    <dd class="col-sm-7">
                                        <small>{{ tool_set.createdAt|date('d.m.Y H:i') }}</small>
                                    </dd>
                                    
                                    <dt class="col-sm-5">Narzędzia:</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-info-subtle text-info">
                                            {{ tool_set.items|length }} pozycji
                                        </span>
                                    </dd>
                                    
                                    <dt class="col-sm-5">Kompletność:</dt>
                                    <dd class="col-sm-7">
                                        {% if tool_set.isComplete %}
                                            <span class="badge bg-success-subtle text-success">
                                                <i class="ri-check-line"></i> Kompletny
                                            </span>
                                        {% else %}
                                            <span class="badge bg-warning-subtle text-warning">
                                                <i class="ri-error-warning-line"></i> Niekompletny
                                            </span>
                                        {% endif %}
                                    </dd>
                                </dl>

                                <div class="alert alert-info">
                                    <h6 class="alert-heading">Uwaga</h6>
                                    <p class="mb-0 small">
                                        Narzędzia w zestawie można edytować w szczegółach zestawu po zapisaniu zmian.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Help -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-question-line me-1"></i>Pomoc
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-warning">
                                    <h6 class="alert-heading">Statusy zestawów</h6>
                                    <ul class="mb-0 small">
                                        <li><strong>Aktywny:</strong> Zestaw dostępny do użycia</li>
                                        <li><strong>W konserwacji:</strong> Wymaga naprawy/przeglądu</li>
                                        <li><strong>Niekompletny:</strong> Brakuje narzędzi</li>
                                        <li><strong>Wycofany:</strong> Nie używany</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="hstack gap-2 justify-content-end">
                    <a href="{{ path('app_tool_set_show', {id: tool_set.id}) }}" class="btn btn-light">
                        <i class="ri-close-line me-1"></i>Anuluj
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="ri-save-line me-1"></i>Zapisz zmiany
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}