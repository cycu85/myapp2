{% extends 'base.html.twig' %}

{% block title %}Dodaj narzędzie - {{ tool_set.name }} - {{ app_name() }}{% endblock %}
{% block page_title %}Dodaj narzędzie do zestawu{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_index') }}">Narzędzia</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_set_index') }}">Zestawy narzędzi</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_set_show', {id: tool_set.id}) }}">{{ tool_set.name }}</a></li>
    <li class="breadcrumb-item active">Dodaj narzędzie</li>
{% endblock %}

{% block content %}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">
                        <i class="ri-add-line me-2"></i>Dodaj narzędzie do zestawu: {{ tool_set.name }}
                    </h5>
                    <div class="flex-shrink-0">
                        <a href="{{ path('app_tool_set_show', {id: tool_set.id}) }}" class="btn btn-secondary">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Powrót do zestawu
                        </a>
                    </div>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="card-body">
                <div class="mb-3">
                    {{ form_label(form.tool, null, {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.tool, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.tool) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.requiredQuantity, null, {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.requiredQuantity, {'attr': {'class': 'form-control', 'min': 1}}) }}
                    {{ form_errors(form.requiredQuantity) }}
                    {{ form_help(form.requiredQuantity) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.notes, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.notes, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    {{ form_errors(form.notes) }}
                    {{ form_help(form.notes) }}
                </div>
            </div>

            <div class="card-footer">
                <div class="hstack gap-2 justify-content-end">
                    <a href="{{ path('app_tool_set_show', {id: tool_set.id}) }}" class="btn btn-light">
                        <i class="ri-close-line me-1"></i>Anuluj
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="ri-save-line me-1"></i>Dodaj narzędzie
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Help -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-information-line me-1"></i>Pomoc
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">Dodawanie narzędzia</h6>
                    <p class="mb-2">Wybierz narzędzie i określ wymaganą ilość w zestawie.</p>
                    <ul class="mb-0 small">
                        <li><strong>Narzędzie:</strong> Wybierz z listy dostępnych</li>
                        <li><strong>Ilość:</strong> Ile sztuk ma zawierać zestaw</li>
                        <li><strong>Uwagi:</strong> Dodatkowe informacje</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Current Set Info -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-stack-line me-1"></i>Informacje o zestawie
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Nazwa:</dt>
                    <dd class="col-sm-7">{{ tool_set.name }}</dd>
                    
                    <dt class="col-sm-5">Kod:</dt>
                    <dd class="col-sm-7">
                        {% if tool_set.code %}
                            <code>{{ tool_set.code }}</code>
                        {% else %}
                            <span class="text-muted">Brak</span>
                        {% endif %}
                    </dd>
                    
                    <dt class="col-sm-5">Pozycji:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-info-subtle text-info">
                            {{ tool_set.items|length }}
                        </span>
                    </dd>
                    
                    <dt class="col-sm-5">Status:</dt>
                    <dd class="col-sm-7">
                        {% set status_class = tool_set.status == 'active' ? 'success' : 'secondary' %}
                        <span class="badge bg-{{ status_class }}-subtle text-{{ status_class }}">
                            {{ tool_set.statusLabel }}
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

{% endblock %}