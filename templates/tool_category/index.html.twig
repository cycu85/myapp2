{% extends 'base.html.twig' %}

{% block title %}Kategorie narzędzi - {{ app_name() }}{% endblock %}
{% block page_title %}Kategorie narzędzi{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="/tools">Narzędzia</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_index') }}">Narzędzia</a></li>
    <li class="breadcrumb-item active">Kategorie</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Lista kategorii narzędzi</h5>
                    <div class="flex-shrink-0">
                        {% if can_create %}
                        <a href="{{ path('app_tool_category_new') }}" class="btn btn-success add-btn">
                            <i class="ri-add-line align-bottom me-1"></i> Dodaj kategorię
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card-body">
                {% if categories|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-nowrap table-striped-columns mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Nazwa</th>
                                <th scope="col">Opis</th>
                                <th scope="col">Ikona</th>
                                <th scope="col">Liczba narzędzi</th>
                                <th scope="col">Kolejność</th>
                                <th scope="col">Status</th>
                                <th scope="col">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 avatar-xs me-2">
                                            <div class="avatar-title rounded-circle bg-light text-body">
                                                {% if category.icon %}
                                                    <i class="{{ category.icon }}"></i>
                                                {% else %}
                                                    <i class="bx bx-folder"></i>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="fs-14 mb-0">
                                                <a href="{{ path('app_tool_category_show', {id: category.id}) }}" class="text-body">{{ category.name }}</a>
                                            </h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">{{ category.description|default('—') }}</span>
                                </td>
                                <td>
                                    {% if category.icon %}
                                    <span class="badge bg-secondary-subtle text-secondary">
                                        <i class="{{ category.icon }} me-1"></i>{{ category.icon }}
                                    </span>
                                    {% else %}
                                    <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% set tools_count = category.activeToolsCount %}
                                    {% if tools_count > 0 %}
                                    <a href="{{ path('app_tool_index', {category: category.id}) }}" class="text-decoration-none">
                                        <span class="badge bg-primary-subtle text-primary">{{ tools_count }} narzędzi</span>
                                    </a>
                                    {% else %}
                                    <span class="text-muted">0 narzędzi</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="text-muted">{{ category.sortOrder }}</span>
                                </td>
                                <td>
                                    {% if category.isActive %}
                                    <span class="badge bg-success-subtle text-success">Aktywna</span>
                                    {% else %}
                                    <span class="badge bg-danger-subtle text-danger">Nieaktywna</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-soft-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="ri-more-fill align-middle"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="{{ path('app_tool_category_show', {id: category.id}) }}">
                                                <i class="ri-eye-fill align-bottom me-2 text-muted"></i> Szczegóły
                                            </a></li>
                                            <li><a class="dropdown-item" href="{{ path('app_tool_index', {category: category.id}) }}">
                                                <i class="ri-list-check align-bottom me-2 text-muted"></i> Zobacz narzędzia
                                            </a></li>
                                            {% if can_edit %}
                                            <li><a class="dropdown-item edit-item-btn" href="{{ path('app_tool_category_edit', {id: category.id}) }}">
                                                <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edytuj
                                            </a></li>
                                            {% endif %}
                                            {% if can_delete and category.activeToolsCount == 0 %}
                                            <li class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger remove-item-btn" href="#" onclick="deleteCategory({{ category.id }}, '{{ category.name }}')">
                                                <i class="ri-delete-bin-fill align-bottom me-2"></i> Usuń
                                            </a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <div class="avatar-md mx-auto mb-4">
                        <div class="avatar-title bg-light rounded-circle display-6 text-muted">
                            <i class="ri-folder-line"></i>
                        </div>
                    </div>
                    <h5>Brak kategorii</h5>
                    <p class="text-muted">Nie utworzono jeszcze żadnych kategorii narzędzi.</p>
                    {% if can_create %}
                    <a href="{{ path('app_tool_category_new') }}" class="btn btn-success">
                        <i class="ri-add-line me-1"></i> Dodaj pierwszą kategorię
                    </a>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Czy jesteś pewien?</h4>
                        <p class="text-muted mx-4 mb-0">Czy na pewno chcesz usunąć kategorię "<span id="category-name-to-delete"></span>"?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Anuluj</button>
                    <form method="post" id="delete-form" style="display: inline;">
                        <input type="hidden" name="_token" id="delete-token">
                        <button type="submit" class="btn w-sm btn-danger">Tak, usuń!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascript %}
<script>
function deleteCategory(categoryId, categoryName) {
    document.getElementById('category-name-to-delete').textContent = categoryName;
    document.getElementById('delete-form').action = '{{ path('app_tool_category_delete', {id: 'CATEGORY_ID'}) }}'.replace('CATEGORY_ID', categoryId);
    
    // Generate CSRF token (you may need to implement this)
    document.getElementById('delete-token').value = 'csrf-token-here';
    
    new bootstrap.Modal(document.getElementById('deleteRecordModal')).show();
}
</script>
{% endblock %}