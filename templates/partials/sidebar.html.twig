<!-- ========== App Menu ========== -->
<div class="app-menu navbar-menu">
    <!-- LOGO -->
    <div class="navbar-brand-box">
        <!-- Dark Logo-->
        <a href="/" class="logo logo-dark">
            <span class="logo-sm">
                <img src="{{ asset('assets/images/logo-sm.png') }}" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="{{ asset(company_logo()) }}" alt="{{ app_name() }}" height="17">
            </span>
        </a>
        <!-- Light Logo-->
        <a href="/" class="logo logo-light">
            <span class="logo-sm">
                <img src="{{ asset('assets/images/logo-sm.png') }}" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="{{ asset(company_logo()) }}" alt="{{ app_name() }}" height="17">
            </span>
        </a>
        <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
            <i class="ri-record-circle-line"></i>
        </button>
    </div>

    <div id="scrollbar">
        <div class="container-fluid">
            <div id="two-column-menu">
            </div>
            <ul class="navbar-nav" id="navbar-nav">
                <li class="menu-title"><span data-key="t-menu">Menu</span></li>
                
                <!-- Dashboard -->
                <li class="nav-item">
                    <a class="nav-link menu-link {{ app.request.get('_route') == 'dashboard' ? 'active' : '' }}" href="/">
                        <i class="ri-dashboard-2-line"></i> <span data-key="t-dashboard">Dashboard</span>
                    </a>
                </li>

                <!-- AssetHub Modules -->
                {% set userModules = get_user_modules() %}
                {% set isSystemAdmin = is_system_admin() %}
                {% set allModules = isSystemAdmin ? get_all_enabled_modules() : [] %}
                
                {% if userModules|length > 0 or isSystemAdmin %}
                    <li class="menu-title"><span data-key="t-modules">Moduły</span></li>
                    
                    {% set hasSystemAdmin = false %}
                    {% set hasEmployeesRole = false %}
                    {% set processedModules = [] %}
                    
                    {# Process user modules first #}
                    {% for userRole in userModules %}
                        {% set module = userRole.role.module %}
                        
                        {% if module.name == 'admin' and userRole.role.name == 'system_admin' %}
                            {% set hasSystemAdmin = true %}
                        {% elseif module.name == 'admin' and userRole.role.name in ['employees_viewer', 'employees_editor', 'employees_manager'] %}
                            {% set hasEmployeesRole = true %}
                        {% endif %}
                        
                        {% if module.name not in processedModules %}
                            {% set processedModules = processedModules|merge([module.name]) %}
                            
                            {% if module.name == 'equipment' %}
                            <li class="nav-item">
                                <a class="nav-link menu-link {{ app.request.get('_route') starts with 'equipment_' ? 'active' : '' }}" href="{{ path('equipment_index') }}">
                                    <i class="ri-tools-line"></i> <span>{{ module.displayName }}</span>
                                </a>
                            </li>
                            {% elseif module.name == 'tools' %}
                            <li class="nav-item">
                                <a class="nav-link menu-link {{ app.request.get('_route') starts with 'app_tool' ? 'active' : '' }}" href="#sidebarTools" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebarTools">
                                    <i class="ri-hammer-line"></i> <span>{{ module.displayName }}</span>
                                </a>
                                <div class="collapse menu-dropdown" id="sidebarTools">
                                    <ul class="nav nav-sm flex-column">
                                        <li class="nav-item">
                                            <a href="{{ path('app_tool_index') }}" class="nav-link {{ app.request.get('_route') == 'app_tool_index' or app.request.get('_route') starts with 'app_tool_' and not (app.request.get('_route') starts with 'app_tool_set' or app.request.get('_route') starts with 'app_tool_inspection') ? 'active' : '' }}">
                                                <i class="ri-hammer-line"></i> Narzędzia
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="{{ path('app_tool_set_index') }}" class="nav-link {{ app.request.get('_route') starts with 'app_tool_set' ? 'active' : '' }}">
                                                <i class="ri-stack-line"></i> Zestawy narzędzi
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="{{ path('app_tool_inspection_index') }}" class="nav-link {{ app.request.get('_route') starts with 'app_tool_inspection' ? 'active' : '' }}">
                                                <i class="ri-search-eye-line"></i> Przeglądy
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            {% elseif module.name != 'admin' %}
                            {# Generic module handler - dla przyszłych modułów (pomijamy admin bo obsługujemy go osobno) #}
                            <li class="nav-item">
                                <a class="nav-link menu-link {{ app.request.get('_route') starts with module.name ~ '_' ? 'active' : '' }}" href="{{ path(module.name ~ '_index') }}">
                                    <i class="ri-apps-line"></i> <span>{{ module.displayName }}</span>
                                </a>
                            </li>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                    
                    {# For system admin, add any missing enabled modules #}
                    {% if isSystemAdmin %}
                        {% for module in allModules %}
                            {% if module.name not in processedModules and module.name != 'admin' %}
                                {% if module.name == 'equipment' %}
                                <li class="nav-item">
                                    <a class="nav-link menu-link {{ app.request.get('_route') starts with 'equipment_' ? 'active' : '' }}" href="{{ path('equipment_index') }}">
                                        <i class="ri-tools-line"></i> <span>{{ module.displayName }}</span>
                                    </a>
                                </li>
                                {% elseif module.name == 'tools' %}
                                <li class="nav-item">
                                    <a class="nav-link menu-link {{ app.request.get('_route') starts with 'app_tool' ? 'active' : '' }}" href="#sidebarToolsAdmin" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebarToolsAdmin">
                                        <i class="ri-hammer-line"></i> <span>{{ module.displayName }}</span>
                                    </a>
                                    <div class="collapse menu-dropdown" id="sidebarToolsAdmin">
                                        <ul class="nav nav-sm flex-column">
                                            <li class="nav-item">
                                                <a href="{{ path('app_tool_index') }}" class="nav-link {{ app.request.get('_route') == 'app_tool_index' or app.request.get('_route') starts with 'app_tool_' and not (app.request.get('_route') starts with 'app_tool_set' or app.request.get('_route') starts with 'app_tool_inspection') ? 'active' : '' }}">
                                                    <i class="ri-hammer-line"></i> Narzędzia
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="{{ path('app_tool_set_index') }}" class="nav-link {{ app.request.get('_route') starts with 'app_tool_set' ? 'active' : '' }}">
                                                    <i class="ri-stack-line"></i> Zestawy narzędzi
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="{{ path('app_tool_inspection_index') }}" class="nav-link {{ app.request.get('_route') starts with 'app_tool_inspection' ? 'active' : '' }}">
                                                    <i class="ri-search-eye-line"></i> Przeglądy
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                {% else %}
                                {# Generic module handler #}
                                <li class="nav-item">
                                    <a class="nav-link menu-link {{ app.request.get('_route') starts with module.name ~ '_' ? 'active' : '' }}" href="{{ path(module.name ~ '_index') }}">
                                        <i class="ri-apps-line"></i> <span>{{ module.displayName }}</span>
                                    </a>
                                </li>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    
                    {# Panel administracyjny dla system_admin #}
                    {% if hasSystemAdmin %}
                    <li class="nav-item">
                        <a class="nav-link menu-link {{ app.request.get('_route') starts with 'admin_' and not (app.request.get('_route') starts with 'admin_users') ? 'active' : '' }}" href="#sidebarAdmin" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebarAdmin">
                            <i class="ri-settings-3-line"></i> <span>Panel administracyjny</span>
                        </a>
                        <div class="collapse menu-dropdown" id="sidebarAdmin">
                            <ul class="nav nav-sm flex-column">
                                <li class="nav-item">
                                    <a href="{{ path('admin_dashboard') }}" class="nav-link">Panel główny</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_roles_index') }}" class="nav-link">Role i uprawnienia</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_modules') }}" class="nav-link">Moduły</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#sidebarDictionaries" class="nav-link {{ app.request.get('_route') starts with 'app_tool_category' or app.request.get('_route') starts with 'app_tool_type' or app.request.get('_route') == 'admin_dictionaries' ? 'active' : '' }}" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebarDictionaries">
                                        Słowniki
                                    </a>
                                    <div class="collapse menu-dropdown" id="sidebarDictionaries">
                                        <ul class="nav nav-sm flex-column">
                                            <li class="nav-item">
                                                <a href="{{ path('admin_dictionaries') }}" class="nav-link {{ app.request.get('_route') == 'admin_dictionaries' ? 'active' : '' }}">Ogólne</a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="{{ path('app_tool_category_index') }}" class="nav-link {{ app.request.get('_route') starts with 'app_tool_category' ? 'active' : '' }}">
                                                    <i class="ri-price-tag-3-line"></i> Kategorie narzędzi
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="{{ path('app_tool_type_index') }}" class="nav-link {{ app.request.get('_route') starts with 'app_tool_type' ? 'active' : '' }}">
                                                    <i class="ri-settings-5-line"></i> Typy narzędzi
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_settings') }}" class="nav-link">Ustawienia</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    {% endif %}
                    
                    {# Menu Pracownicy dla system_admin lub ról employees #}
                    {% if hasSystemAdmin or hasEmployeesRole %}
                    <li class="nav-item">
                        <a class="nav-link menu-link {{ app.request.get('_route') starts with 'admin_users' ? 'active' : '' }}" href="{{ path('admin_users_index') }}">
                            <i class="ri-team-line"></i> <span>Pracownicy</span>
                        </a>
                    </li>
                    {% endif %}
                {% endif %}

                <!-- Additional modules would go here -->

            </ul>
        </div>
        <!-- Sidebar -->
    </div>

    <div class="sidebar-background"></div>
</div>
<!-- Left Sidebar End -->
<!-- Vertical Overlay-->
<div class="vertical-overlay"></div>