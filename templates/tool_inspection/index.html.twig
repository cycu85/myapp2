{% extends 'base.html.twig' %}

{% block title %}Przeglądy narzędzi - {{ app_name() }}{% endblock %}
{% block page_title %}Przeglądy narzędzi{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="/tools">Narzędzia</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_index') }}">Narzędzia</a></li>
    <li class="breadcrumb-item active">Przeglądy</li>
{% endblock %}

{% block content %}

<!-- Alert Cards -->
<div class="row">
    {% if overdue_inspections|length > 0 %}
    <div class="col-xl-6 col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger-subtle">
                <h6 class="card-title text-danger mb-0">
                    <i class="ri-error-warning-line me-2"></i>Zaległe przeglądy
                </h6>
            </div>
            <div class="card-body">
                <h3 class="text-danger">{{ overdue_inspections|length }}</h3>
                <p class="text-muted mb-2">Przeglądy po terminie</p>
                <a href="#overdue-section" class="btn btn-sm btn-danger">
                    <i class="ri-arrow-down-line me-1"></i> Zobacz szczegóły
                </a>
            </div>
        </div>
    </div>
    {% endif %}

    {% if upcoming_inspections|length > 0 %}
    <div class="col-xl-6 col-md-6">
        <div class="card border-warning">
            <div class="card-header bg-warning-subtle">
                <h6 class="card-title text-warning mb-0">
                    <i class="ri-calendar-line me-2"></i>Nadchodzące przeglądy
                </h6>
            </div>
            <div class="card-body">
                <h3 class="text-warning">{{ upcoming_inspections|length }}</h3>
                <p class="text-muted mb-2">W ciągu 30 dni</p>
                <a href="#upcoming-section" class="btn btn-sm btn-warning">
                    <i class="ri-arrow-down-line me-1"></i> Zobacz szczegóły
                </a>
            </div>
        </div>
    </div>
    {% endif %}
</div>

<!-- Main Inspections Table -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Historia przeglądów</h5>
                    <div class="flex-shrink-0">
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_tool_inspection_calendar') }}" class="btn btn-secondary">
                                <i class="ri-calendar-line align-bottom me-1"></i> Kalendarz
                            </a>
                            {% if can_create %}
                            <a href="{{ path('app_tool_inspection_bulk_schedule') }}" class="btn btn-info">
                                <i class="ri-calendar-schedule-line align-bottom me-1"></i> Planuj przeglądy
                            </a>
                            <a href="{{ path('app_tool_inspection_new') }}" class="btn btn-success add-btn">
                                <i class="ri-add-line align-bottom me-1"></i> Dodaj przegląd
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card-body border-bottom">
                <form method="GET" action="{{ path('app_tool_inspection_index') }}" class="row g-3">
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">Wszystkie statusy</option>
                            <option value="passed" {% if current_status == 'passed' %}selected{% endif %}>Pozytywny</option>
                            <option value="failed" {% if current_status == 'failed' %}selected{% endif %}>Negatywny</option>
                            <option value="needs_repair" {% if current_status == 'needs_repair' %}selected{% endif %}>Wymaga naprawy</option>
                            <option value="out_of_service" {% if current_status == 'out_of_service' %}selected{% endif %}>Wyłączony z użytku</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="date_from" class="form-label">Data od</label>
                        <input type="date" class="form-control" id="date_from" name="date_from" value="{{ current_date_from }}">
                    </div>

                    <div class="col-md-3">
                        <label for="date_to" class="form-label">Data do</label>
                        <input type="date" class="form-control" id="date_to" name="date_to" value="{{ current_date_to }}">
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="ri-search-line me-1"></i> Filtruj
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="card-body">
                {% if inspections|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-nowrap table-striped-columns mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Narzędzie</th>
                                <th scope="col">Data przeglądu</th>
                                <th scope="col">Inspektor</th>
                                <th scope="col">Wynik</th>
                                <th scope="col">Koszt</th>
                                <th scope="col">Następny przegląd</th>
                                <th scope="col">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for inspection in inspections %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 avatar-xs me-2">
                                            <div class="avatar-title rounded-circle bg-light text-body">
                                                <i class="bx bx-wrench"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            {% if inspection.tool %}
                                            <h6 class="fs-14 mb-1">
                                                <a href="{{ path('app_tool_show', {id: inspection.tool.id}) }}" class="text-body">{{ inspection.tool.name }}</a>
                                            </h6>
                                            <p class="text-muted mb-0 fs-12">{{ inspection.tool.category.name }} • {{ inspection.tool.type.name }}</p>
                                            {% else %}
                                            <span class="text-muted">Narzędzie usunięte</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <h6 class="fs-14 mb-1">{{ inspection.inspectionDate|date('d.m.Y') }}</h6>
                                        <p class="text-muted mb-0 fs-12">{{ inspection.inspectionDate|date('H:i') }}</p>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">{{ inspection.inspectorName ?: inspection.inspectedBy.fullName ?? 'Nieznany' }}</span>
                                </td>
                                <td>
                                    {% set result_class = inspection.result == 'passed' ? 'success' : (inspection.result == 'needs_repair' ? 'warning' : 'danger') %}
                                    <span class="badge bg-{{ result_class }}-subtle text-{{ result_class }}">
                                        {{ inspection.resultLabel }}
                                    </span>
                                    {% if inspection.defectsFound|length > 0 %}
                                    <span class="badge bg-warning-subtle text-warning ms-1" title="Znaleziono {{ inspection.defectsFound|length }} usterek">
                                        <i class="ri-error-warning-line"></i>
                                    </span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if inspection.cost %}
                                    <span class="text-muted">{{ inspection.cost|number_format(2, ',', ' ') }} zł</span>
                                    {% else %}
                                    <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if inspection.nextInspectionDate %}
                                    <span class="text-muted">{{ inspection.nextInspectionDate|date('d.m.Y') }}</span>
                                    {% else %}
                                    <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-soft-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="ri-more-fill align-middle"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="{{ path('app_tool_inspection_show', {id: inspection.id}) }}">
                                                <i class="ri-eye-fill align-bottom me-2 text-muted"></i> Szczegóły
                                            </a></li>
                                            {% if inspection.tool %}
                                            <li><a class="dropdown-item" href="{{ path('app_tool_show', {id: inspection.tool.id}) }}">
                                                <i class="ri-tool-line align-bottom me-2 text-muted"></i> Zobacz narzędzie
                                            </a></li>
                                            {% endif %}
                                            {% if can_edit %}
                                            <li><a class="dropdown-item edit-item-btn" href="{{ path('app_tool_inspection_edit', {id: inspection.id}) }}">
                                                <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edytuj
                                            </a></li>
                                            {% endif %}
                                            {% if can_delete %}
                                            <li class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger remove-item-btn" href="#" onclick="deleteInspection({{ inspection.id }}, '{{ inspection.tool ? inspection.tool.name : 'usuniętego narzędzia' }}')">
                                                <i class="ri-delete-bin-fill align-bottom me-2"></i> Usuń
                                            </a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <div class="avatar-md mx-auto mb-4">
                        <div class="avatar-title bg-light rounded-circle display-6 text-muted">
                            <i class="ri-search-eye-line"></i>
                        </div>
                    </div>
                    <h5>Brak przeglądów</h5>
                    <p class="text-muted">Nie znaleziono przeglądów spełniających kryteria wyszukiwania.</p>
                    {% if can_create %}
                    <a href="{{ path('app_tool_inspection_new') }}" class="btn btn-success">
                        <i class="ri-add-line me-1"></i> Dodaj pierwszy przegląd
                    </a>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Overdue Inspections -->
{% if overdue_inspections|length > 0 %}
<div class="row" id="overdue-section">
    <div class="col-lg-12">
        <div class="card border-danger">
            <div class="card-header bg-danger-subtle">
                <h6 class="card-title text-danger mb-0">
                    <i class="ri-error-warning-line me-2"></i>Zaległe przeglądy ({{ overdue_inspections|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Narzędzie</th>
                                <th>Planowana data</th>
                                <th>Dni zaległości</th>
                                <th>Lokalizacja</th>
                                <th>Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for overdue in overdue_inspections %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 avatar-xs me-2">
                                            <div class="avatar-title rounded-circle bg-danger-subtle text-danger">
                                                <i class="bx bx-wrench"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="fs-14 mb-1">
                                                <a href="{{ path('app_tool_show', {id: overdue.tool.id}) }}" class="text-body">{{ overdue.tool.name }}</a>
                                            </h6>
                                            <p class="text-muted mb-0 fs-12">{{ overdue.tool.category.name }}</p>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ overdue.plannedDate|date('d.m.Y') }}</td>
                                <td>
                                    {% set days_overdue = date().diff(overdue.plannedDate).days %}
                                    <span class="badge bg-danger-subtle text-danger">{{ days_overdue }} dni</span>
                                </td>
                                <td>{{ overdue.tool.location ?: 'Nieokreślona' }}</td>
                                <td>
                                    {% if can_create %}
                                    <a href="{{ path('app_tool_inspection_new_for_tool', {toolId: overdue.tool.id}) }}" class="btn btn-sm btn-danger">
                                        <i class="ri-add-line me-1"></i> Wykonaj przegląd
                                    </a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<!-- Upcoming Inspections -->
{% if upcoming_inspections|length > 0 %}
<div class="row" id="upcoming-section">
    <div class="col-lg-12">
        <div class="card border-warning">
            <div class="card-header bg-warning-subtle">
                <h6 class="card-title text-warning mb-0">
                    <i class="ri-calendar-line me-2"></i>Nadchodzące przeglądy ({{ upcoming_inspections|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Narzędzie</th>
                                <th>Planowana data</th>
                                <th>Za ile dni</th>
                                <th>Lokalizacja</th>
                                <th>Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for upcoming in upcoming_inspections %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 avatar-xs me-2">
                                            <div class="avatar-title rounded-circle bg-warning-subtle text-warning">
                                                <i class="bx bx-wrench"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="fs-14 mb-1">
                                                <a href="{{ path('app_tool_show', {id: upcoming.tool.id}) }}" class="text-body">{{ upcoming.tool.name }}</a>
                                            </h6>
                                            <p class="text-muted mb-0 fs-12">{{ upcoming.tool.category.name }}</p>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ upcoming.plannedDate|date('d.m.Y') }}</td>
                                <td>
                                    {% set days_until = upcoming.plannedDate.diff(date()).days %}
                                    <span class="badge bg-info-subtle text-info">{{ days_until }} dni</span>
                                </td>
                                <td>{{ upcoming.tool.location ?: 'Nieokreślona' }}</td>
                                <td>
                                    {% if can_create %}
                                    <a href="{{ path('app_tool_inspection_new_for_tool', {toolId: upcoming.tool.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="ri-add-line me-1"></i> Wykonaj przegląd
                                    </a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<!-- Delete Modal -->
<div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Czy jesteś pewien?</h4>
                        <p class="text-muted mx-4 mb-0">Czy na pewno chcesz usunąć przegląd narzędzia "<span id="tool-name-to-delete"></span>"?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Anuluj</button>
                    <form method="post" id="delete-form" style="display: inline;">
                        <input type="hidden" name="_token" id="delete-token">
                        <button type="submit" class="btn w-sm btn-danger">Tak, usuń!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascript %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit form on filter change
    const filterSelects = document.querySelectorAll('#status, #date_from, #date_to');
    filterSelects.forEach(select => {
        select.addEventListener('change', function() {
            this.form.submit();
        });
    });
});

function deleteInspection(inspectionId, toolName) {
    document.getElementById('tool-name-to-delete').textContent = toolName;
    document.getElementById('delete-form').action = '{{ path('app_tool_inspection_delete', {id: 'INSPECTION_ID'}) }}'.replace('INSPECTION_ID', inspectionId);
    
    // Generate CSRF token (you may need to implement this)
    document.getElementById('delete-token').value = 'csrf-token-here';
    
    new bootstrap.Modal(document.getElementById('deleteRecordModal')).show();
}
</script>
{% endblock %}