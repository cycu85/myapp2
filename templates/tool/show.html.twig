{% extends 'base.html.twig' %}

{% block title %}{{ tool.name }} - Narzędzia - {{ app_name() }}{% endblock %}
{% block page_title %}Szczegóły narzędzia{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="/tools">Narzędzia</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_tool_index') }}">Narzędzia</a></li>
    <li class="breadcrumb-item active">{{ tool.name }}</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="avatar-sm">
                            <div class="avatar-title rounded-circle bg-light text-body display-6">
                                <i class="bx bx-wrench"></i>
                            </div>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="card-title mb-1">{{ tool.name }}</h5>
                        <p class="text-muted mb-0">
                            {% if tool.manufacturer %}{{ tool.manufacturer }}{% endif %}
                            {% if tool.model %} {{ tool.model }}{% endif %}
                        </p>
                    </div>
                    <div class="flex-shrink-0">
                        <div class="d-flex gap-2">
                            {% if can_edit %}
                            <a href="{{ path('app_tool_edit', {id: tool.id}) }}" class="btn btn-primary">
                                <i class="ri-pencil-line align-bottom me-1"></i> Edytuj
                            </a>
                            <a href="{{ path('app_tool_inspection_new_for_tool', {toolId: tool.id}) }}" class="btn btn-secondary">
                                <i class="ri-search-eye-line align-bottom me-1"></i> Dodaj przegląd
                            </a>
                            {% endif %}
                            {% if can_delete %}
                            <button type="button" class="btn btn-danger" onclick="deleteTool({{ tool.id }}, '{{ tool.name }}')">
                                <i class="ri-delete-bin-line align-bottom me-1"></i> Usuń
                            </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <th class="ps-0" scope="row">Kategoria:</th>
                                        <td class="text-muted">
                                            <span class="badge bg-primary-subtle text-primary">{{ tool.category.name }}</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0" scope="row">Typ:</th>
                                        <td class="text-muted">
                                            <span class="badge bg-secondary-subtle text-secondary">
                                                {{ tool.type.name }}
                                                {% if tool.type.isMultiQuantity %}
                                                <i class="ri-stack-line ms-1" title="Wielosztuki"></i>
                                                {% endif %}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0" scope="row">Status:</th>
                                        <td class="text-muted">
                                            {% set status_class = tool.status == 'active' ? 'success' : (tool.status == 'maintenance' ? 'warning' : 'danger') %}
                                            <span class="badge bg-{{ status_class }}-subtle text-{{ status_class }}">{{ tool.statusLabel }}</span>
                                            {% if tool.isInspectionDue %}
                                            <span class="badge bg-danger-subtle text-danger ms-1">
                                                <i class="ri-error-warning-line"></i> Przegląd!
                                            </span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0" scope="row">Lokalizacja:</th>
                                        <td class="text-muted">{{ tool.location ?: 'Nieokreślona' }}</td>
                                    </tr>
                                    {% if tool.serialNumber %}
                                    <tr>
                                        <th class="ps-0" scope="row">Numer seryjny:</th>
                                        <td class="text-muted">{{ tool.serialNumber }}</td>
                                    </tr>
                                    {% endif %}
                                    {% if tool.inventoryNumber %}
                                    <tr>
                                        <th class="ps-0" scope="row">Numer inwentarzowy:</th>
                                        <td class="text-muted">{{ tool.inventoryNumber }}</td>
                                    </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    {% if tool.type.isMultiQuantity %}
                                    <tr>
                                        <th class="ps-0" scope="row">Ilość aktualna:</th>
                                        <td class="text-muted">
                                            <span class="fw-medium">{{ tool.currentQuantity }}</span> {{ tool.unit }}
                                            {% if tool.isLowQuantity %}
                                            <i class="ri-error-warning-line text-warning ms-1" title="Niski stan"></i>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0" scope="row">Ilość całkowita:</th>
                                        <td class="text-muted">{{ tool.totalQuantity }} {{ tool.unit }}</td>
                                    </tr>
                                    {% if tool.minQuantity %}
                                    <tr>
                                        <th class="ps-0" scope="row">Minimalny stan:</th>
                                        <td class="text-muted">{{ tool.minQuantity }} {{ tool.unit }}</td>
                                    </tr>
                                    {% endif %}
                                    {% endif %}

                                    {% if tool.purchaseDate %}
                                    <tr>
                                        <th class="ps-0" scope="row">Data zakupu:</th>
                                        <td class="text-muted">{{ tool.purchaseDate|date('d.m.Y') }}</td>
                                    </tr>
                                    {% endif %}

                                    {% if tool.purchasePrice %}
                                    <tr>
                                        <th class="ps-0" scope="row">Cena zakupu:</th>
                                        <td class="text-muted">{{ tool.purchasePrice|number_format(2, ',', ' ') }} zł</td>
                                    </tr>
                                    {% endif %}

                                    {% if tool.warrantyEndDate %}
                                    <tr>
                                        <th class="ps-0" scope="row">Gwarancja do:</th>
                                        <td class="text-muted">{{ tool.warrantyEndDate|date('d.m.Y') }}</td>
                                    </tr>
                                    {% endif %}

                                    {% if tool.nextInspectionDate %}
                                    <tr>
                                        <th class="ps-0" scope="row">Następny przegląd:</th>
                                        <td class="text-muted">
                                            {{ tool.nextInspectionDate|date('d.m.Y') }}
                                            {% if tool.isInspectionDue %}
                                            <span class="text-danger">(zaległe)</span>
                                            {% elseif tool.inspectionInterval %}
                                            <small class="text-muted">(co {{ tool.inspectionIntervalMonths }} mies.)</small>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                {% if tool.description %}
                <div class="row mt-4">
                    <div class="col-12">
                        <h6 class="fw-semibold text-uppercase text-muted fs-13">Opis</h6>
                        <p class="text-muted">{{ tool.description|nl2br }}</p>
                    </div>
                </div>
                {% endif %}

                {% if tool.notes %}
                <div class="row mt-3">
                    <div class="col-12">
                        <h6 class="fw-semibold text-uppercase text-muted fs-13">Uwagi</h6>
                        <p class="text-muted">{{ tool.notes|nl2br }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Tool History & Inspections -->
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs-custom card-header-tabs border-bottom-0" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active fw-semibold" data-bs-toggle="tab" href="#inspections-tab" role="tab">
                            <i class="ri-search-eye-line me-1 align-bottom"></i>
                            Historia przeglądów
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link fw-semibold" data-bs-toggle="tab" href="#sets-tab" role="tab">
                            <i class="ri-stack-line me-1 align-bottom"></i>
                            Zestawy narzędzi
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link fw-semibold" data-bs-toggle="tab" href="#history-tab" role="tab">
                            <i class="ri-time-line me-1 align-bottom"></i>
                            Historia zmian
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="inspections-tab" role="tabpanel">
                        {% if tool.inspections|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-borderless table-nowrap align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Data przeglądu</th>
                                        <th scope="col">Wynik</th>
                                        <th scope="col">Inspektor</th>
                                        <th scope="col">Uwagi</th>
                                        <th scope="col">Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for inspection in tool.inspections|slice(0, 10) %}
                                    <tr>
                                        <td>{{ inspection.inspectionDate|date('d.m.Y H:i') }}</td>
                                        <td>
                                            {% set result_class = inspection.result == 'passed' ? 'success' : 'danger' %}
                                            <span class="badge bg-{{ result_class }}-subtle text-{{ result_class }}">
                                                {{ inspection.resultLabel }}
                                            </span>
                                        </td>
                                        <td>{{ inspection.inspectorName ?: 'Nieznany' }}</td>
                                        <td>
                                            {% if inspection.notes %}
                                                <span class="text-muted">{{ inspection.notes|slice(0, 50) }}{% if inspection.notes|length > 50 %}...{% endif %}</span>
                                            {% else %}
                                                <span class="text-muted">—</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('app_tool_inspection_show', {id: inspection.id}) }}" class="btn btn-sm btn-soft-primary">
                                                <i class="ri-eye-line"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% if tool.inspections|length > 10 %}
                        <div class="text-center mt-3">
                            <a href="{{ path('app_tool_inspection_index', {tool: tool.id}) }}" class="btn btn-soft-secondary">
                                Zobacz wszystkie przeglądy
                            </a>
                        </div>
                        {% endif %}
                        {% else %}
                        <div class="text-center py-4">
                            <div class="avatar-md mx-auto mb-4">
                                <div class="avatar-title bg-light rounded-circle display-6 text-muted">
                                    <i class="ri-search-eye-line"></i>
                                </div>
                            </div>
                            <h5>Brak przeglądów</h5>
                            <p class="text-muted">To narzędzie nie ma jeszcze żadnych przeglądów.</p>
                            {% if can_edit %}
                            <a href="{{ path('app_tool_inspection_new_for_tool', {toolId: tool.id}) }}" class="btn btn-primary">
                                <i class="ri-add-line me-1"></i> Dodaj pierwszy przegląd
                            </a>
                            {% endif %}
                        </div>
                        {% endif %}
                    </div>

                    <div class="tab-pane fade" id="sets-tab" role="tabpanel">
                        <!-- Tool sets containing this tool will be loaded here -->
                        <div class="text-center py-4">
                            <div class="avatar-md mx-auto mb-4">
                                <div class="avatar-title bg-light rounded-circle display-6 text-muted">
                                    <i class="ri-stack-line"></i>
                                </div>
                            </div>
                            <h5>Zestawy narzędzi</h5>
                            <p class="text-muted">Lista zestawów zawierających to narzędzie.</p>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="history-tab" role="tabpanel">
                        <div class="text-center py-4">
                            <div class="avatar-md mx-auto mb-4">
                                <div class="avatar-title bg-light rounded-circle display-6 text-muted">
                                    <i class="ri-time-line"></i>
                                </div>
                            </div>
                            <h5>Historia zmian</h5>
                            <p class="text-muted">Historia modyfikacji tego narzędzia.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Stats -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Szybkie informacje</h6>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                        <div class="avatar-xs">
                            <div class="avatar-title rounded-circle bg-success-subtle text-success">
                                <i class="ri-time-line"></i>
                            </div>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-1">Dodano</h6>
                        <p class="text-muted mb-0">{{ tool.createdAt|date('d.m.Y') }}</p>
                        {% if tool.createdBy %}
                        <small class="text-muted">przez {{ tool.createdBy.fullName }}</small>
                        {% endif %}
                    </div>
                </div>

                {% if tool.updatedAt %}
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                        <div class="avatar-xs">
                            <div class="avatar-title rounded-circle bg-warning-subtle text-warning">
                                <i class="ri-edit-line"></i>
                            </div>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-1">Ostatnia modyfikacja</h6>
                        <p class="text-muted mb-0">{{ tool.updatedAt|date('d.m.Y') }}</p>
                        {% if tool.updatedBy %}
                        <small class="text-muted">przez {{ tool.updatedBy.fullName }}</small>
                        {% endif %}
                    </div>
                </div>
                {% endif %}

                <div class="d-flex align-items-center mb-0">
                    <div class="flex-shrink-0">
                        <div class="avatar-xs">
                            <div class="avatar-title rounded-circle bg-info-subtle text-info">
                                <i class="ri-search-eye-line"></i>
                            </div>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-1">Przeglądy</h6>
                        <p class="text-muted mb-0">{{ tool.inspections|length }} wykonanych</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Szybkie akcje</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    {% if can_edit %}
                    <a href="{{ path('app_tool_inspection_new_for_tool', {toolId: tool.id}) }}" class="btn btn-primary">
                        <i class="ri-search-eye-line me-2"></i>Dodaj przegląd
                    </a>
                    <a href="{{ path('app_tool_edit', {id: tool.id}) }}" class="btn btn-soft-secondary">
                        <i class="ri-pencil-line me-2"></i>Edytuj narzędzie
                    </a>
                    {% endif %}
                    <a href="{{ path('app_tool_index') }}" class="btn btn-soft-secondary">
                        <i class="ri-arrow-left-line me-2"></i>Wróć do listy
                    </a>
                </div>
            </div>
        </div>

        <!-- Warnings -->
        {% if tool.isInspectionDue or tool.isLowQuantity %}
        <div class="card border-warning">
            <div class="card-header bg-warning-subtle">
                <h6 class="card-title text-warning mb-0">
                    <i class="ri-error-warning-line me-2"></i>Uwagi
                </h6>
            </div>
            <div class="card-body">
                {% if tool.isInspectionDue %}
                <div class="alert alert-warning mb-3">
                    <i class="ri-error-warning-line me-2"></i>
                    <strong>Zaległy przegląd!</strong><br>
                    To narzędzie wymaga pilnego przeglądu.
                </div>
                {% endif %}

                {% if tool.isLowQuantity %}
                <div class="alert alert-warning mb-0">
                    <i class="ri-error-warning-line me-2"></i>
                    <strong>Niski stan magazynowy!</strong><br>
                    Pozostało tylko {{ tool.currentQuantity }} {{ tool.unit }} (min. {{ tool.minQuantity }}).
                </div>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Czy jesteś pewien?</h4>
                        <p class="text-muted mx-4 mb-0">Czy na pewno chcesz usunąć narzędzie "<span id="tool-name-to-delete"></span>"?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Anuluj</button>
                    <form method="post" id="delete-form" style="display: inline;">
                        <input type="hidden" name="_token" id="delete-token">
                        <button type="submit" class="btn w-sm btn-danger">Tak, usuń!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascript %}
<script>
function deleteTool(toolId, toolName) {
    document.getElementById('tool-name-to-delete').textContent = toolName;
    document.getElementById('delete-form').action = '{{ path('app_tool_delete', {id: tool.id}) }}';
    
    // Generate CSRF token (you may need to implement this)
    document.getElementById('delete-token').value = 'csrf-token-here';
    
    new bootstrap.Modal(document.getElementById('deleteRecordModal')).show();
}
</script>
{% endblock %}