{% extends 'base.html.twig' %}

{% block title %}Narzędzia - {{ app_name() }}{% endblock %}
{% block page_title %}Zarządzanie narzędziami{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="/tools">Narzędzia</a></li>
    <li class="breadcrumb-item active">Narzędzia</li>
{% endblock %}

{% block content %}

<!-- Statistics Cards -->
{% if statistics %}
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Wszystkie narzędzia</p>
                    </div>
                    <div class="flex-shrink-0">
                        <h5 class="text-success fs-14 mb-0">
                            <i class="ri-arrow-right-up-line fs-13 align-middle"></i>
                        </h5>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-2">
                    <div>
                        <h2 class="ff-secondary fw-semibold">{{ statistics.total_tools }}</h2>
                        <a href="#" class="text-decoration-underline">Zobacz wszystkie</a>
                    </div>
                    <div class="avatar-sm flex-shrink-0">
                        <span class="avatar-title bg-success-subtle rounded fs-3">
                            <i class="bx bx-wrench text-success"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Aktywne</p>
                    </div>
                    <div class="flex-shrink-0">
                        <h5 class="text-success fs-14 mb-0">
                            <i class="ri-arrow-right-up-line fs-13 align-middle"></i>
                        </h5>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-2">
                    <div>
                        <h2 class="ff-secondary fw-semibold">{{ statistics.active_tools }}</h2>
                        <a href="?status=active" class="text-decoration-underline">Zobacz aktywne</a>
                    </div>
                    <div class="avatar-sm flex-shrink-0">
                        <span class="avatar-title bg-primary-subtle rounded fs-3">
                            <i class="bx bx-check-circle text-primary"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Nadchodzące przeglądy</p>
                    </div>
                    <div class="flex-shrink-0">
                        <h5 class="text-danger fs-14 mb-0">
                            <i class="ri-arrow-right-up-line fs-13 align-middle"></i>
                        </h5>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-2">
                    <div>
                        <h2 class="ff-secondary fw-semibold">{{ statistics.upcoming_inspections }}</h2>
                        <a href="{{ path('app_tool_inspection_index') }}" class="text-decoration-underline">Zobacz przeglądy</a>
                    </div>
                    <div class="avatar-sm flex-shrink-0">
                        <span class="avatar-title bg-warning-subtle rounded fs-3">
                            <i class="bx bx-time-five text-warning"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Niski stan</p>
                    </div>
                    <div class="flex-shrink-0">
                        <h5 class="text-danger fs-14 mb-0">
                            <i class="ri-arrow-right-up-line fs-13 align-middle"></i>
                        </h5>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-2">
                    <div>
                        <h2 class="ff-secondary fw-semibold">{{ statistics.low_quantity_tools }}</h2>
                        <a href="#" class="text-decoration-underline">Zobacz szczegóły</a>
                    </div>
                    <div class="avatar-sm flex-shrink-0">
                        <span class="avatar-title bg-danger-subtle rounded fs-3">
                            <i class="bx bx-error text-danger"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<!-- Navigation Tabs -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_tool_index') }}">
                            <i class="ri-hammer-line me-1"></i> Narzędzia
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_tool_set_index') }}">
                            <i class="ri-stack-line me-1"></i> Zestawy narzędzi
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_tool_inspection_index') }}">
                            <i class="ri-search-eye-line me-1"></i> Przeglądy
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_tool_category_index') }}">
                            <i class="ri-price-tag-3-line me-1"></i> Kategorie
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_tool_type_index') }}">
                            <i class="ri-settings-5-line me-1"></i> Typy
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Tools Table -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Lista narzędzi</h5>
                    <div class="flex-shrink-0">
                        <div class="d-flex gap-2">
                            {% if can_export %}
                            <a href="{{ path('app_tool_export_csv', app.request.query.all) }}" class="btn btn-secondary">
                                <i class="ri-download-2-line align-bottom me-1"></i> Eksport CSV
                            </a>
                            {% endif %}
                            {% if can_create %}
                            <a href="{{ path('app_tool_new') }}" class="btn btn-success add-btn">
                                <i class="ri-add-line align-bottom me-1"></i> Dodaj narzędzie
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card-body border-bottom">
                <form method="GET" action="{{ path('app_tool_index') }}" class="row g-3">
                    <div class="col-md-3">
                        <label for="search" class="form-label">Szukaj</label>
                        <input type="text" class="form-control" id="search" name="search" value="{{ current_search }}" placeholder="Nazwa, producent, numer seryjny...">
                    </div>
                    
                    <div class="col-md-2">
                        <label for="category" class="form-label">Kategoria</label>
                        <select class="form-select" id="category" name="category">
                            <option value="">Wszystkie kategorije</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}" {% if current_category == category.id %}selected{% endif %}>{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label for="type" class="form-label">Typ</label>
                        <select class="form-select" id="type" name="type">
                            <option value="">Wszystkie typy</option>
                            {% for type in types %}
                                <option value="{{ type.id }}" {% if current_type == type.id %}selected{% endif %}>{{ type.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">Wszystkie statusy</option>
                            {% for status_key, status_label in statuses %}
                                <option value="{{ status_key }}" {% if current_status == status_key %}selected{% endif %}>{{ status_label }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label for="location" class="form-label">Lokalizacja</label>
                        <select class="form-select" id="location" name="location">
                            <option value="">Wszystkie lokalizacje</option>
                            {% for location in locations %}
                                <option value="{{ location }}" {% if current_location == location %}selected{% endif %}>{{ location }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="col-md-1">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="ri-search-line"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="card-body">
                {% if tools|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-nowrap table-striped-columns mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="checkAll">
                                        <label class="form-check-label" for="checkAll"></label>
                                    </div>
                                </th>
                                <th scope="col">Narzędzie</th>
                                <th scope="col">Kategoria</th>
                                <th scope="col">Typ</th>
                                <th scope="col">Status</th>
                                <th scope="col">Lokalizacja</th>
                                <th scope="col">Ilość</th>
                                <th scope="col">Ostatni przegląd</th>
                                <th scope="col">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for tool in tools %}
                            <tr>
                                <td>
                                    {% if can_edit %}
                                    <div class="form-check">
                                        <input class="form-check-input tool-checkbox" type="checkbox" name="selected_tools[]" value="{{ tool.id }}">
                                    </div>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 avatar-xs me-2">
                                            <div class="avatar-title rounded-circle bg-light text-body">
                                                <i class="bx bx-wrench"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="fs-14 mb-1">
                                                <a href="{{ path('app_tool_show', {id: tool.id}) }}" class="text-body">{{ tool.name }}</a>
                                            </h6>
                                            {% if tool.manufacturer %}
                                            <p class="text-muted mb-0 fs-12">{{ tool.manufacturer }}{% if tool.model %} {{ tool.model }}{% endif %}</p>
                                            {% endif %}
                                            {% if tool.serialNumber %}
                                            <p class="text-muted mb-0 fs-12">SN: {{ tool.serialNumber }}</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary">{{ tool.category.name }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary-subtle text-secondary">
                                        {{ tool.type.name }}
                                        {% if tool.type.isMultiQuantity %}
                                        <i class="ri-stack-line ms-1" title="Wielosztuki"></i>
                                        {% endif %}
                                    </span>
                                </td>
                                <td>
                                    {% set status_class = tool.status == 'active' ? 'success' : (tool.status == 'maintenance' ? 'warning' : 'danger') %}
                                    <span class="badge bg-{{ status_class }}-subtle text-{{ status_class }}">{{ tool.statusLabel }}</span>
                                    {% if tool.isInspectionDue %}
                                    <span class="badge bg-danger-subtle text-danger ms-1">
                                        <i class="ri-error-warning-line"></i> Przegląd!
                                    </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="text-muted">{{ tool.location ?: 'Nieokreślona' }}</span>
                                </td>
                                <td>
                                    {% if tool.type.isMultiQuantity %}
                                        <span class="fw-medium">{{ tool.currentQuantity }}/{{ tool.totalQuantity }}</span>
                                        <small class="text-muted">{{ tool.unit }}</small>
                                        {% if tool.isLowQuantity %}
                                        <i class="ri-error-warning-line text-warning ms-1" title="Niski stan"></i>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">1 szt</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if tool.nextInspectionDate %}
                                    <span class="text-muted">{{ tool.nextInspectionDate|date('d.m.Y') }}</span>
                                    {% else %}
                                    <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-soft-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="ri-more-fill align-middle"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="{{ path('app_tool_show', {id: tool.id}) }}">
                                                <i class="ri-eye-fill align-bottom me-2 text-muted"></i> Szczegóły
                                            </a></li>
                                            {% if can_edit %}
                                            <li><a class="dropdown-item edit-item-btn" href="{{ path('app_tool_edit', {id: tool.id}) }}">
                                                <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edytuj
                                            </a></li>
                                            <li><a class="dropdown-item" href="{{ path('app_tool_inspection_new_for_tool', {toolId: tool.id}) }}">
                                                <i class="ri-search-eye-line align-bottom me-2 text-muted"></i> Dodaj przegląd
                                            </a></li>
                                            {% endif %}
                                            {% if can_delete %}
                                            <li class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger remove-item-btn" href="#" onclick="deleteTool({{ tool.id }}, '{{ tool.name }}')">
                                                <i class="ri-delete-bin-fill align-bottom me-2"></i> Usuń
                                            </a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Bulk Actions -->
                {% if can_edit %}
                <div class="row mt-3" id="bulk-actions" style="display: none;">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <strong id="selected-count">0</strong> narzędzi zaznaczonych
                                </div>
                                <div class="flex-shrink-0">
                                    <div class="d-flex gap-2">
                                        <select class="form-select form-select-sm" id="bulk-action">
                                            <option value="">Wybierz akcję</option>
                                            <option value="activate">Ustaw status: Aktywny</option>
                                            <option value="deactivate">Ustaw status: Nieaktywny</option>
                                            <option value="maintenance">Ustaw status: Konserwacja</option>
                                            {% if can_delete %}
                                            <option value="delete">Usuń</option>
                                            {% endif %}
                                        </select>
                                        <button type="button" class="btn btn-sm btn-primary" onclick="executeBulkAction()">Wykonaj</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}

                {% else %}
                <div class="text-center py-5">
                    <div class="avatar-md mx-auto mb-4">
                        <div class="avatar-title bg-light rounded-circle display-6 text-muted">
                            <i class="ri-search-line"></i>
                        </div>
                    </div>
                    <h5>Brak wyników</h5>
                    <p class="text-muted">Nie znaleziono narzędzi spełniających kryteria wyszukiwania.</p>
                    {% if can_create %}
                    <a href="{{ path('app_tool_new') }}" class="btn btn-success">
                        <i class="ri-add-line me-1"></i> Dodaj pierwsze narzędzie
                    </a>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Czy jesteś pewien?</h4>
                        <p class="text-muted mx-4 mb-0">Czy na pewno chcesz usunąć narzędzie "<span id="tool-name-to-delete"></span>"?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Anuluj</button>
                    <form method="post" id="delete-form" style="display: inline;">
                        <input type="hidden" name="_token" id="delete-token">
                        <button type="submit" class="btn w-sm btn-danger">Tak, usuń!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascript %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Check all functionality
    const checkAll = document.getElementById('checkAll');
    const checkboxes = document.querySelectorAll('.tool-checkbox');
    const bulkActions = document.getElementById('bulk-actions');
    const selectedCount = document.getElementById('selected-count');

    if (checkAll) {
        checkAll.addEventListener('change', function() {
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateBulkActions();
        });
    }

    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateBulkActions);
    });

    function updateBulkActions() {
        const checkedBoxes = document.querySelectorAll('.tool-checkbox:checked');
        if (checkedBoxes.length > 0) {
            bulkActions.style.display = 'block';
            selectedCount.textContent = checkedBoxes.length;
        } else {
            bulkActions.style.display = 'none';
        }
    }

    // Auto-submit form on filter change
    const filterSelects = document.querySelectorAll('#category, #type, #status, #location');
    filterSelects.forEach(select => {
        select.addEventListener('change', function() {
            this.form.submit();
        });
    });
});

function deleteTool(toolId, toolName) {
    document.getElementById('tool-name-to-delete').textContent = toolName;
    document.getElementById('delete-form').action = '{{ path('app_tool_delete', {id: 'TOOL_ID'}) }}'.replace('TOOL_ID', toolId);
    
    // Generate CSRF token (you may need to implement this)
    document.getElementById('delete-token').value = 'csrf-token-here';
    
    new bootstrap.Modal(document.getElementById('deleteRecordModal')).show();
}

function executeBulkAction() {
    const action = document.getElementById('bulk-action').value;
    const checkedBoxes = document.querySelectorAll('.tool-checkbox:checked');
    
    if (!action || checkedBoxes.length === 0) {
        alert('Wybierz akcję i zaznacz narzędzia do edycji.');
        return;
    }

    if (confirm(`Czy na pewno chcesz wykonać tę akcję na ${checkedBoxes.length} narzędziach?`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '{{ path('app_tool_bulk_action') }}';
        
        // Add CSRF token
        const csrfInput = document.createElement('input');
        csrfInput.type = 'hidden';
        csrfInput.name = '_token';
        csrfInput.value = 'csrf-token-here'; // You may need to implement this
        form.appendChild(csrfInput);

        // Add action
        const actionInput = document.createElement('input');
        actionInput.type = 'hidden';
        actionInput.name = 'bulk_action';
        actionInput.value = action;
        form.appendChild(actionInput);

        // Add selected tools
        checkedBoxes.forEach(checkbox => {
            const toolInput = document.createElement('input');
            toolInput.type = 'hidden';
            toolInput.name = 'selected_tools[]';
            toolInput.value = checkbox.value;
            form.appendChild(toolInput);
        });

        document.body.appendChild(form);
        form.submit();
    }
}
</script>
{% endblock %}